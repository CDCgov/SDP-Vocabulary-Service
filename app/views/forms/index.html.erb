<p id="notice"><%= notice %></p>

<h1>Forms</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
      <tr id="form_id_<%= form.id %>">
        <td>id_<%= form.id %></td>
        <td><%= form.name %></td>
        <td><%= form.created_by.email if form.created_by.present? %></td>
        <td><%= link_to 'Show', form %></td>
        <td><%= link_to 'Revise', revise_form_path(form) %></td>
        <td><%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Form', new_form_path %>
