<%= form_for(form) do |f| %>
  <% if form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div> 

  <div class="col-md-4">
    <% @questions.each do |q| %>
      <%= link_to_add_question "add", f, q %> &nbsp <%= q.content %><br>
    <% end %>
  </div>

  <div class="col-md-8">
    <% @form.questions.each do |q| %>
      <%= link_to_add_question "rem", f, q %> &nbsp <%= q.content %><br>
    <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
