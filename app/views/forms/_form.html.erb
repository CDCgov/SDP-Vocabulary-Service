<%= form_for(form) do |f| %>
  <% if form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-md-12">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="col-md-4">
    <h4>Select Questions:</h4><br>
    <% @questions.each do |q| %>
      <a href='javascript:SDP.forms.addQuestion("<%= q.content %>", <%= q.id %>, <%= @response_sets.map {|rs| {"id" => rs.id, "name" => rs.name}}.to_json %>)'><%= q.content %></a><br>
    <% end %>
  </div>

  <div class="col-md-8">
    <h4>Added:</h4><br>
    <table id="questionTable" aria-label="Added">
      <thead>
        <tr>
          <th>Question</th>
          <th>Response Set</th>
        </tr>
      </thead>

      <tbody>
        <tr><td></td></tr>
      </tbody>
    </table>

    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
