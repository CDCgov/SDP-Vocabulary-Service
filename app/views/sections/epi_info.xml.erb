<Template Level="View" Name="<%= @section.name.parameterize.underscore %>">
  <Project>
    <View ViewId="1" Name="<%= @section.name.parameterize.underscore %>" CheckCode="">
      <%= render partial: "sections/epi_info_section.xml",
        locals: {section: @section, page_id: 1, position: 1} %>
    </View>
  </Project>
    <%
     questions = @section.flatten_questions
     response_sets = questions.collect{|q| q.response_set}.compact
     response_sets.each do |rs| %>
  <SourceTable TableName="code<%=rs.name.parameterize.underscore.camelize%>">
    <% rs.responses.each do |resp| %>
      <Item <%=rs.name.parameterize.underscore.camelize%>="<%= resp.value + '-' if resp.value %><%= resp.display_name %>" />
    <% end %>
  </SourceTable>
  <% end %>
</Template>
