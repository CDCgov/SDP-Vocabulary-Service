<div class="basic-bg">
  <p id="notice"><%= notice %></p>
  <h1>Concepts</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Value</th>
        <th>Taggable ID</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @concepts.each do |concept| %>
        <tr>
  	      <td>id_<%= concept.id %></td>
          <td><%= concept.value %></td>
          <td><%= concept.taggable_id %></td>
          <td><%= link_to 'Show', concept %></td>
          <td><%= link_to 'Edit', edit_concept_path(concept) %></td>
          <td><%= link_to 'Destroy', concept, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Concept', new_concept_path %>
</div>
