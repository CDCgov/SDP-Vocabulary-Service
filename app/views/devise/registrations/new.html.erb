<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="registration panel panel-default">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"form-horizontal") do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <div id="legend">
            <legend class="">Sign up</legend>
          </div>
          <div class="control-group">
            <%= f.label :email, "E-mail", class: "control-label"%>
            <div class="controls">
              <%= f.email_field :email, autofocus: true, placeholder: "", class:"form-control input-lg" %>
              <p class="help-block">Please provide your E-mail</p>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password, "Password", class: "control-label"%>
            <div class="controls">
              <%= f.password_field :password, autocomplete: "off"  , placeholder: "", class:"form-control input-lg" %>
              <% if @minimum_password_length %>
              <p class="help-block">Password should be at least
                <%= @minimum_password_length %>
                characters</p>
              <% end %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password_confirmation , "Password (Confirm)", class: "control-label" %>
            <div class="controls">
              <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder: "", class:"form-control input-lg" %>
              <p class="help-block">Please confirm password</p>
            </div>
          </div>

          <div class="control-group">
            <!-- Button -->
            <div class="controls">
              <%= f.submit "Sign up" , class: "btn btn-success"%>
              <br>
            </div>
          </div>
        </fieldset>

        <% end %>
      </div>

    </div>
    <br>
  </div>
</div>
