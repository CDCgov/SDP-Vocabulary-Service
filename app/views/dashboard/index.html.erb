<p id="notice"><%= notice %></p>

<div class="conatiner">
  <div class="row dashboard">

    <div class="col-md-8 dashboard-details">
      <!-- START Analytics Widget -->
      <div class="row">
        <div class="col-md-12">
          <div class="analytics-group">
            <ul class="analytics-list-group">
              <li class="analytics-list-item"><i class="fa fa-question-circle fa-3x item-icon" aria-hidden="true"></i><p class="item-value"><%= @questions.count %></p><h2 class="item-title">Questions</h2></li>
              <li class="analytics-list-item"><i class="fa fa-list fa-3x item-icon" aria-hidden="true"></i>
              <p class="item-value"><%= @response_sets.count %></p><h2 class="item-title">Response Sets</h2></li>
              <li class="analytics-list-item"><i class="fa fa-clipboard fa-3x item-icon" aria-hidden="true"></i>
              <p class="item-value"><%= @forms.count %></p><h2 class="item-title">Forms</h2></li>
            </ul>
          </div>
        </div>
      </div>
      <!-- END Analytics Widget -->
      
      <!-- Start Search Widget -->
      
      <div id="search-widget">
      </div>
      
      <!-- End Search Widget -->
    </div>

    <div class="col-md-4">
      <div class="dashboard-activity">
        
        <!-- START Recent Items Widget -->
        <div class="panel panel-default">
          <div class="panel-heading">Recent Items</div>
          <div class="panel-body">
            <ul class="list-group">
              <li class="list-group-item">RESPONSE SETS</li>
              <li class="list-group-item">QUESTIONS</li>
              <li class="list-group-item">FORMS</li>
            </ul>
          </div>
        </div>
        <!-- END Recent Items Widget -->
        
        <!-- START System Activity Widget -->
        <div class="panel panel-default">
          <div class="panel-heading">System Activity</div>
            <div class="panel-body">
              <ul class="list-group">
                <li class="list-group-item">Activity 1</li>
                <li class="list-group-item">Activity 2</li>
                <li class="list-group-item">Activity 3</li>
                <li class="list-group-item">Activity 4</li>
                <li class="list-group-item">Activity 4</li>
              </ul>
            </div>
          </div>
        </div>
        <!-- END System Activity Widget -->

      </div>
    </div>
  </div>
</div>


<script type="application/json" id="response-set-json">
  <%= raw @response_sets.to_json %>
</script>

<script type="application/json" id="question-json">
  <%= raw @questions.to_json %>
</script>
<%= javascript_include_tag *webpack_asset_paths('search', extension: 'js') %>

