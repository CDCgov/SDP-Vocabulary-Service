<?xml version="1.0" encoding="UTF-8" ?>
<ODM xmlns="http://www.cdisc.org/ns/odm/v1.3" xmlns:ds="http://www.w3.org/2000/09/xmldsig#" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:redcap="https://projectredcap.org" xsi:schemaLocation="http://www.cdisc.org/ns/odm/v1.3 schema/odm/ODM1-3-1.xsd" ODMVersion="1.3.1" FileOID="000-00-0000" FileType="Snapshot" Description="test"   AsOfDateTime="<%= Time.now %>"   CreationDateTime="<%= @survey.created_at %>"   SourceSystem="SDP-Vocabulary-Service" SourceSystemVersion="0.1">
<Study OID="Project.Test">
<GlobalVariables>
	<StudyName><%=@survey.name%></StudyName> <!--  -->
	<StudyDescription><%=@survey.description %></StudyDescription>
	<ProtocolName>Test</ProtocolName>
	<redcap:RecordAutonumberingEnabled>1</redcap:RecordAutonumberingEnabled>
	<redcap:CustomRecordLabel></redcap:CustomRecordLabel>
	<redcap:SecondaryUniqueField></redcap:SecondaryUniqueField>
	<redcap:SchedulingEnabled>0</redcap:SchedulingEnabled>
	<redcap:Purpose>0</redcap:Purpose>
	<redcap:PurposeOther></redcap:PurposeOther>
	<redcap:ProjectNotes></redcap:ProjectNotes>
</GlobalVariables>
<MetaDataVersion OID="Metadata.Test_2016-12-15_1938" Name="test" >
   <!-- section defs -->
   <% @survey.sections.each do |section| %>

   <SectionDef OID="Section.<%= section.name.gsub(' ', '_')%>" Name="<%= section.name %>" Repeating="No" redcap:SectionName="<%= section.name.underscore %>">
     <ItemGroupRef ItemGroupOID="<%= section.name.gsub(' ', '_')%>.single_section" Mandatory="No"/>
   </SectionDef>

   <% end %>
   <% @survey.sections.each do |section| %>
   <!-- item groups -->
   <ItemGroupDef OID="<%= section.name.gsub(' ', '_') %>.single_section" Name="<%= section.name %>" Repeating="No">
     <% section.section_questions.each do |sq| %>
     <ItemRef ItemOID="question_<%=sq.id%>" Mandatory="No" redcap:Variable="<%=sq.program_var || "question_#{sq.id}"%>"/>
     <% end %>
   </ItemGroupDef>
   <% end %>

   <% section_questions = @survey.sections.collect {|section| section.section_questions}.flatten %>

  <!-- item defs -->
  <% section_questions.each do |sq| %>
    <ItemDef OID="question_<%=sq.id%>" Name="question_<%=sq.id%>" DataType="text" Length="999" redcap:Variable="<%=sq.program_var || "question_#{sq.id}"%>" redcap:FieldType="<%= sq.response_set ? 'select' : 'text' %>" >
      <Question><TranslatedText><%= sq.question.content %></TranslatedText></Question>
      <% if sq.response_set %>
      <CodeListRef CodeListOID="question_<%=sq.id%>.choices"/>
      <% end %>
    </ItemDef>
  <% end %>



  <!-- code list defs -->
  <% section_questions.each do |sq| %>
     <% if sq.response_set %>
      <CodeList OID="question_<%=sq.id%>.choices" Name="question_<%=sq.id%>" DataType="text" redcap:Variable="<%=sq.program_var || "question_#{sq.id}"%>">
        <% sq.response_set.responses.each do |response| %>
        <CodeListItem CodedValue="<%= response.value %>"><Decode><TranslatedText><%= response.display_name.blank? ?  response.value : response.display_name%></TranslatedText></Decode></CodeListItem>
        <% end %>
      </CodeList>
    <% end %>
  <% end %>
</MetaDataVersion>
</Study>
</ODM>
